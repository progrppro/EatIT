<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_center_cart"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView_card_cart"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_toLeftOf="@+id/textView_center_cart" />

        <TextView
            android:id="@+id/textView_name_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textView_center_cart"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_price_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_name_cart"
            android:layout_gravity="end"
            android:layout_toRightOf="@+id/textView_center_cart"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/minus_cart"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_price_cart"
            android:layout_toRightOf="@+id/textView_center_cart"
            android:gravity="center_horizontal"
            android:text="-" />

        <TextView
            android:id="@+id/textView_amount"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_price_cart"
            android:layout_toRightOf="@+id/minus_cart"
            android:gravity="center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/plus_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_price_cart"
            android:layout_toRightOf="@+id/textView_amount"
            android:gravity="center_horizontal"
            android:text="+" />

    </RelativeLayout>

</android.support.v7.widget.CardView>