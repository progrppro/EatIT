<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_center"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView_card_cat"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_toLeftOf="@+id/textView_center" />

        <TextView
            android:id="@+id/textView_name_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textView_center"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_price_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_name_cat"
            android:layout_gravity="end"
            android:layout_toRightOf="@+id/textView_center"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_price_cat"
            android:layout_toRightOf="@+id/textView_center"
            android:gravity="center_horizontal"
            android:text="Add to cart" />

        <TextView
            android:id="@+id/textView_description_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_card_cat"/>

        <TextView
            android:id="@+id/textView_image_cat"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:visibility="gone" />

    </RelativeLayout>

</android.support.v7.widget.CardView>